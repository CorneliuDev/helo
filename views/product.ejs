<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="../style.css">
    <script type="module" src="../components/product-card.js"></script>
    <script type="module" src="../components/product-page.js"></script>
    <link rel="shortcut icon" href="../media/favicons/logo-yellow-short.ico" type="image/x-icon">
    <title>Helo - Orice produs la un click distanță</title>
</head>

<body class="flex flex-col max-w-screen ">
    <!-- Navbar -->
    <nav class="xl:px-44 lg:px-32 md:px-18 px-3">
        <section id="pre-nav" class="flex justify-end h-7">
            <a href="/conectare-parteneri/"><button
                    class="bg-black text-white text-sm w-34 py-1.5 cursor-pointer hover:pt-3 duration-300  rounded-b-xl">Devino
                    partener</button></a>
        </section>
        <div class="flex flex-row justify-between pt-4">

            <a href="../"><img src="../media/logo-yellow-black.svg" alt="" id="logo" class="p-0 h-15"></a>

            <form action="../cautare" id="search-bar"
                class="hidden lg:flex flex-row gap-4 justify-between h-12 w-full max-w-xl accent-container rounded-full p-0.5 mt-2 mx-5">
                <input type="text" placeholder="Ce produs vrei să găsești?" name="search" id="search"
                    class="w-full focus:outline-none pl-3">
                <input type="submit" value="Caută" id="submit"
                    class="bg-[var(--coral)] text-white w-32 rounded-full active:scale-95 ">
            </form>

            <div id="nav-controls" class="flex flex-row gap-1 md:gap-4">
                <div id="login">
                    <a href="/conectare" id="account"
                        class="flex flex-col justify-center items-center transition-all duration-300 transform active:scale-95 peer ">
                        <div
                            class="accent-container rounded-full aspect-square w-14 flex justify-center items-center shadow-implicit">
                            <img src="../media/user-icon.svg" alt="" id="account-icon" class="w-6">
                        </div>
                        <p>Cont</p>
                    </a>
                    <div id="drop-down-categories" class="z-10 hidden peer-hover:flex hover:flex absolute ">
                        <div id="catergories-wrapper"
                            class="flex-col gap-2 p-4 border-accent bg-white shadow-implicit rounded-xl mt-2 ">
                            <a href="../conectare"
                                class="category-label flex gap-2 items-center cursor-pointer h-9 px-4 border-b-accent w-full">
                                <p class="font-medium">Conectează-te</p>
                            </a>

                            <a href="../creare-cont"
                                class="category-label flex gap-2 items-center cursor-pointer h-9 px-4 border-b-accent w-full">
                                <p class="font-medium">Creează cont</p>
                            </a>
                        </div>
                    </div>
                </div>
                <a href="/comenzi/" id="orders"
                    class="hidden md:flex flex-col justify-center items-center transition-all duration-300 transform active:scale-95">
                    <div
                        class="accent-container rounded-full aspect-square w-14 flex justify-center items-center shadow-implicit">
                        <img src="../media/orders-icon.svg" alt="" id="orders-icon" class="w-6 ">
                    </div>
                    <p>Comenzi</p>
                </a>
                <a href="../cart/" id="cart"
                    class="hidden md:flex flex-col justify-center items-center transition-all duration-300 transform active:scale-95">
                    <div
                        class="accent-container rounded-full aspect-square w-14 flex justify-center items-center shadow-implicit">
                        <img src="../media/cart-icon.svg" alt="" id="orders-icon" class="w-6">
                    </div>
                    <p>Coș</p>
                </a>
            </div>
        </div>
        <section id="mobile-search" class="lg:hidden flex justify-center">
            <form action="../cautare" id="search-bar"
                class=" flex flex-row gap-4 justify-between h-12 w-full max-w-xl accent-container rounded-full p-0.5 my-2">
                <input type="text" placeholder="Ce produs vrei să găsești?" name="search" id="search"
                    class="w-full focus:outline-none pl-3">
                <input type="submit" value="Caută" id="submit"
                    class="bg-[var(--coral)] text-white w-32 rounded-full active:scale-95 ">
            </form>
        </section>
    </nav>

    

<main class="flex flex-col max-w-screen w-full xl:px-44 lg:px-30 md:px-12 px-1 items-center overflow-hidden">
    <!-- Categories -->
    <section id="categories" class="flex flex-wrap md:justify-center items-center gap-10 sm:gap-2 my-2">

        <!-- Toate -->
        <div id="all-categories-container">
            <div
                class="flex gap-2 justify-center items-center cursor-pointer h-9 px-4 rounded-xl border-accent peer bg-[var(--blue)]">
                <img src="../media/icons/categories/all-categories.svg" class="w-5 aspect-square invert">
                <p class="font-medium text-white">Toate categoriile</p>
            </div>

            <div id="drop-down-categories"
                class="z-10 hidden peer-hover:flex hover:flex absolute ">
                <div id="catergories-wrapper" class="flex-col gap-2 p-4 border-accent bg-white shadow-implicit rounded-xl mt-2 ">
                    <% categories.forEach(item => { %>
                        <a href="/<%= item.route %>"
                        class="category-label flex gap-2 items-center cursor-pointer h-9 px-4 border-b-accent w-full">
                            <p class="font-medium"><%= item.display_name %></p>
                        </a>
                    <% }); %>
            </div>
            </div>

        </div>

        <!-- Electrocasnice -->
        <a href="../electrocasnice"
            class="category-label hidden md:flex gap-2 justify-center items-center cursor-pointer h-9 px-4 rounded-xl border-accent">
            <img src="../media/icons/categories/appliances.svg" class="w-5 aspect-square">
            <p class="font-medium">Electrocasnice</p>
        </a>

        <!-- Modă & Accesorii -->
        <a href="../moda-accesorii"
            class="category-label hidden md:flex gap-2 items-center justify-center cursor-pointer h-9 px-4 rounded-xl border-accent">
            <img src="../media/icons/categories/clothing.svg" class="w-5 aspect-square">
            <p class="font-medium">Modă & Accesorii</p>
        </a>

        <!-- Frumusețe & Sănătate -->
        <a href="../frumusete-sanatate"
            class="category-label hidden md:flex gap-2 items-center justify-center cursor-pointer h-9 px-4 rounded-xl border-accent">
            <img src="../media/icons/categories/health.svg" class="w-5 aspect-square">
            <p class="font-medium">Frumusețe & Sănătate</p>
        </a>

        <!-- Casă & Grădină -->
        <a href="../casa-gradina"
            class="category-label hidden md:flex gap-2 items-center justify-center cursor-pointer h-9 px-4 rounded-xl border-accent">
            <img src="../media/icons/categories/home-garden.svg" class="w-5 aspect-square">
            <p class="font-medium">Casă & Grădină</p>
        </a>

        <!-- Jucării & Copii -->
        <a href="../jucarii-copii"
            class="category-label hidden md:flex gap-2 items-center justify-center cursor-pointer h-9 px-4 rounded-xl border-accent">
            <img src="../media/icons/categories/toys-kids.svg" class="w-5 aspect-square">
            <p class="font-medium">Jucării & Copii</p>
        </a>




    </section>
    
    <!-- Product -->
    <product-page id="product-page"
        title="<%= title %>"
        currentPrice="<%= currentPrice %>"
        oldPrice="<%= oldPrice %>"
        rating="<%= rating %>"
        description="<%= description %>"
        images="<%= JSON.stringify(images) %>">
    </product-page>

    <!-- Products -->
    <section id="popular-products"
        class="flex flex-col border-t border-[#F2F2F2] pt-10 items-center justify-center w-full md:my-10 mb-12">
        <h1 class="font-medium text-4xl w-full">Produse similare</h1>

        <div id="products"
            class="grid sm:grid-cols-[repeat(auto-fit,250px)] grid-cols-[repeat(2,minmax(150px,1fr)] gap-1 sm:gap-3 mt-5 w-full justify-center">
            <% similarProducts.forEach(item => { %>
                <product-card title="<%= item.title %>" currentPrice="<%= item.currentPrice %>" oldPrice="<%= item.oldPrice %>"
                    rating="<%= item.rating %>" link="/product/<%= item.id_product %>" image="../media/images/<%= item.image.split(';')[0] %>">
                </product-card>
            <% }); %>
        </div>

        <button
            class="h-15 w-40 rounded-2xl bg-black text-xl text-white mt-7 duration-300 hover:scale-105 active:scale-95">Mai
            multe</button>
    </section>
</main>

    <!-- Footer -->
    <footer class="w-full overflow-hidden">
        <!-- Logo -->
        <div
            class="main-footer w-full bg-accent flex flex-col xl:flex-row items-center justify-center xl:justify-evenly p-16 lg:px-40">
            <img src="../media/logo-yellow-black.svg" class="h-20 mb-16 lg:mb-0 lg:mr-16 xl:self-start">

            <!-- Links Columns -->
            <div class="flex flex-col md:flex-row w-full lg:w-auto justify-between items-center md:items-start">
                <!-- Meniu principal -->
                <div class="flex flex-col mb-8 lg:mb-0 md:items-start items-center sm:mx-0 md:mx-7 lg:mx-20">
                    <p class="font-medium text-[1.3rem]">Meniu principal</p>
                    <a href="" class="text-xl text-gray-600">Acasă</a>
                    <a href="" class="text-xl text-gray-600">Produse</a>
                    <a href="" class="text-xl text-gray-600">Cont</a>
                    <a href="" class="text-xl text-gray-600">Coș</a>
                    <a href="" class="text-xl text-gray-600">Comenzi</a>
                </div>

                <!-- Partneri -->
                <div class="flex flex-col mb-8 lg:mb-0 md:items-start items-center sm:mx-0 md:mx-7 lg:mx-20">
                    <p class="font-medium text-[1.3rem]">Partneri</p>
                    <a href="../conectare-parteneri/" class="text-xl text-gray-600">Hub</a>
                    <a href="" class="text-xl text-gray-600">Devino partener</a>
                    <a href="" class="text-xl text-gray-600">Termeni și condiții</a>
                </div>

                <!-- Linkuri utile -->
                <div class="flex flex-col mb-8 lg:mb-0 md:items-start items-center sm:mx-0 md:mx-7 lg:mx-20">
                    <p class="font-medium text-[1.3rem]">Linkuri utile</p>
                    <a href="" class="text-xl text-gray-600">FAQ</a>
                    <a href="" class="text-xl text-gray-600">Termeni și condiții</a>
                    <a href="" class="text-xl text-gray-600 text-center sm:text-left">Politica de confidențialitate</a>
                    <a href="" class="text-xl text-gray-600">Politica de retur</a>
                </div>
            </div>
        </div>
        <div class="copyright bg-gray-100 text-center py-3">© 2025 Cybersit | Toate drepturile rezervate</div>
    </footer>
    <script>
        window.onload = function() {
            const cookies = document.cookie;
            if(cookies == 'auth=true') {
                const loginPanel = document.getElementById("login");
                loginPanel.classList.add('hidden');
            }

            const myElement = document.querySelector("product-page");
            const button = myElement.shadowRoot.querySelector("#cart_add");
            button.onclick = function() {
                fetch('/addtocart', {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({product_id: window.location.pathname.split('/')[2]})
                }).then((response) => response.json()).then((data) => {
                    if(data['reason'] == 'noauth') window.location = '/conectare';
                });
            }
        }
    </script>
</body>
</html>