<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/style.css">
    <script type="module" src="/components/cart-item.js"></script>
    <script type="module" src="/components/product-card.js"></script>
    <link rel="shortcut icon" href="/media/favicons/logo-yellow-short.ico" type="image/x-icon">
    <title>Helo - Orice produs la un click distanță</title>
    <script>
        window.onload = function() {
            const cookies = document.cookie;
            if(cookies == 'auth=true') {
                const loginPanel = document.getElementById("login");
                loginPanel.classList.add('hidden');
            }
            document.addEventListener('update-cart', function(event) {
                const {id, change} = event.detail;
                fetch('/updateAmount', {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({id: id, change: change})
                });
            });
            document.addEventListener('delete-cart', function(event) {
                const {id} = event.detail;
                fetch('/deleteItemCart', {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({id: id})
                });
                window.location.reload();
            });
        }
    </script>
</head>

<body class="flex flex-col max-w-screen ">
    <!-- Navbar -->
    <nav class="xl:px-44 lg:px-32 md:px-18 px-3">
        <section id="pre-nav" class="flex justify-end h-7">
            <a href="/conectare-parteneri/"><button
                    class="bg-black text-white text-sm w-34 py-1.5 cursor-pointer hover:pt-3 duration-300  rounded-b-xl">Devino
                    partener</button></a>
        </section>
        <div class="flex flex-row justify-between pt-4">

            <a href="/"><img src="/media/logo-yellow-black.svg" alt="" id="logo" class="p-0 h-15"></a>

