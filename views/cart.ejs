            </div>
        </div>
        <section id="mobile-search" class="lg:hidden flex justify-center">
            <form action="/cautare" id="search-bar"
                class=" flex flex-row gap-4 justify-between h-12 w-full max-w-xl accent-container rounded-full p-0.5 my-2">
                <input type="text" placeholder="Ce produs vrei să găsești?" name="search" id="search"
                    class="w-full focus:outline-none pl-3">
                <input type="submit" value="Caută" id="submit"
                    class="bg-[var(--coral)] text-white w-32 rounded-full active:scale-95 ">
            </form>
        </section>
    </nav>



    <main class="flex flex-col max-w-screen w-full xl:px-44 lg:px-30 md:px-12 px-1 items-center overflow-hidden">
        <!-- Categories -->
        <section id="categories" class="flex flex-wrap md:justify-center items-center gap-10 sm:gap-2 my-2">

            <!-- Toate -->
            <div id="all-categories-container">
                <div
                    class="flex gap-2 justify-center items-center cursor-pointer h-9 px-4 rounded-xl border-accent peer bg-[var(--blue)]">
                    <img src="/media/icons/categories/all-categories.svg" class="w-5 aspect-square invert">
                    <p class="font-medium text-white">Toate categoriile</p>
                </div>

                <div id="drop-down-categories" class="z-10 hidden peer-hover:flex hover:flex absolute ">
                    <div id="catergories-wrapper"
                        class="flex-col gap-2 p-4 border-accent bg-white shadow-implicit rounded-xl mt-2 ">
                        <% categories.forEach(item => { %>
                            <a href="/<%= item.route %>"
                            class="category-label flex gap-2 items-center cursor-pointer h-9 px-4 border-b-accent w-full">
                                <p class="font-medium"><%= item.display_name %></p>
                            </a>
                        <% }) %>
                    </div>
                </div>

            </div>

            <!-- Electrocasnice -->
            <a href="/electrocasnice"
                class="category-label hidden md:flex gap-2 justify-center items-center cursor-pointer h-9 px-4 rounded-xl border-accent">
                <img src="/media/icons/categories/appliances.svg" class="w-5 aspect-square">
                <p class="font-medium">Electrocasnice</p>
            </a>

            <!-- Modă & Accesorii -->
            <a href="/moda-accesorii"
                class="category-label hidden md:flex gap-2 items-center justify-center cursor-pointer h-9 px-4 rounded-xl border-accent">
                <img src="/media/icons/categories/clothing.svg" class="w-5 aspect-square">
                <p class="font-medium">Modă & Accesorii</p>
            </a>

            <!-- Frumusețe & Sănătate -->
            <a href="/frumusete-sanatate"
                class="category-label hidden md:flex gap-2 items-center justify-center cursor-pointer h-9 px-4 rounded-xl border-accent">
                <img src="/media/icons/categories/health.svg" class="w-5 aspect-square">
                <p class="font-medium">Frumusețe & Sănătate</p>
            </a>

            <!-- Casă & Grădină -->
            <a href="/casa-gradina"
                class="category-label hidden md:flex gap-2 items-center justify-center cursor-pointer h-9 px-4 rounded-xl border-accent">
                <img src="/media/icons/categories/home-garden.svg" class="w-5 aspect-square">
                <p class="font-medium">Casă & Grădină</p>
            </a>

            <!-- Jucării & Copii -->
            <a href="/jucarii-copii"
                class="category-label hidden md:flex gap-2 items-center justify-center cursor-pointer h-9 px-4 rounded-xl border-accent">
                <img src="/media/icons/categories/toys-kids.svg" class="w-5 aspect-square">
                <p class="font-medium">Jucării & Copii</p>
            </a>




        </section>
        <section id="cart-section"
            class="bg-[#F9F9F9] w-full p-8 mt-10 rounded-3xl min-h-[300px] border border-[#F2F2F2]">
            <h1 id="cart-title" class="font-semibold text-2xl sm:text-3xl leading-none">Coș de cumpărături</h1>
            <div id="cart-box" class="mt-10 grid grid-cols-1  lg:grid-cols-[1fr_minmax(250px,400px)] w-full gap-4">
                <div class="cart-items-wrapper w-full">
                    <div id="select-and-delete" class="flex justify-between p-4 w-full h-14 bg-white rounded-xl mb-8">
                        <div class="flex gap-2 items-center">
                            <input type="checkbox" name="select-all" id="select-all"
                                class="w-5 h-5 cursor-pointer accent-[var(--coral) ]">
                            <label for="select-all"
                                class="flex gap-2 items-center cursor-pointer font-medium">Selectează toate</label>
                        </div>
                        <div id="delete-selected" class="flex gap-2 items-center cursor-pointer">
                            <img src="/media/icons/bin.svg" class="w-4">
                            <p id="delte-text" class="text-red-600">Șterge selectate</p>
                        </div>
                    </div>

                    <div id="cart-items" class="flex flex-col gap-2">
                        <% cart_products.forEach(item => { %>
                            <cart-item title="<%= item.title %>" price="<%= item.currentPrice %>" productId="<%= item.id %>"
                                quantity="<%= item.amount %>" image="/media/images/<%= item.image.split(';')[0] %>">
                            </cart-item>
                        <% }) %>
                    </div>
                </div>

                <div id="cart-summary" class="w-full h-96 bg-white rounded-xl flex flex-col justify-between p-5">
                    <h1 class=" text-2xl font-semibold">Rezumat comandă</h1>
                    <div>
                        <div class="flex gap-4 p-1 rounded-full border border-[#F2F2F2]">
                            <input type="text" id="coupon" name="coupon" placeholder="Introduceți cuponul"
                                class="p-2 outline-none w-full">
                            <button id="apply-cupon" onclick="applycoupon()"
                                class="bg-[var(--coral)] text-white w-32 rounded-full active:scale-95 duration-300">Aplică</button>
                        </div>
                        <p id="cupon-applied" class="text-md mt-2 font-semibold text-[var(--coral)] hidden">Cupon
                            aplicat:
                            <span id="cupon-value"></span>
                        </p>
                    </div>

                    <div class="w-full ">
                        <div class="flex justify-between">
                            <p>Subtotal</p>
                            <p id="subtotal-price"><%= Math.round(cart_products.reduce((sum, item) => sum + item.currentPrice*item.amount, 0)*100)/100 %></p>
                        </div>

                        <div class="flex justify-between">
                            <p class="f ont-semibold text-xl">Total</p>
                            <div class="font-semibold text-xl flex">
                                <p id="total-price"><%= Math.round(cart_products.reduce((sum, item) => sum + item.currentPrice*item.amount, 0)*100)/100 %></p> <span id="currency" class="ml-1">MDL</span>
                            </div>
                        </div>

                        <div class="w-full h-[1px] bg-[#F2F2F2]"></div>
                        <form action="/checkout" method="post" id="submitOrder">
                            <input id="selectedProducts" name="items" hidden>
                            <input id="couponValidation" name="coupon" hidden>
                            <button type="button" onclick="finalise()"
                                class="h-14 cursor-pointer w-full p-0 rounded-2xl bg-[var(--coral)] text-xl text-white mt-7 duration-300 active:scale-99">
                                <p class="h-full w-full flex items-center justify-center">Finalizează comanda</p>
                            </button>
                        </form>
                    </div>
                    <script>
                        function finalise()
                        {
                            document.getElementById("couponValidation").value = document.getElementById("coupon").value;
                            document.getElementById("submitOrder").submit();
                        }
                        function applycoupon()
                        {
                            const totalPriceItem = document.getElementById("total-price");
                            const inputCouponValue = document.getElementById("coupon").value;                            
                            const couponValue = document.getElementById("cupon-value");
                            const cuponApplied = document.getElementById("cupon-applied");
                            const subTotalPrice = document.getElementById("subtotal-price").innerText;
                            fetch('/check-coupon', {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({coupon: inputCouponValue})
                            }).then((response) => response.json())
                            .then((data) => {
                                const rate = data['result']['rate'];
                                cuponApplied.classList.remove("hidden");
                                document.getElementById("currency").classList.add("text-[var(--coral)]");
                                totalPriceItem.classList.add("text-[var(--coral)]");
                                couponValue.innerText = `-${rate}%`;
                                totalPriceItem.innerText = Math.round((subTotalPrice - rate / 100 * subTotalPrice) * 100) / 100;
                            })
                            .catch(error => console.log(`Error:${error}`));
                        }
                    </script>
                </div>
            </div>
        </section>

        <!-- Products -->
        <section id="popular-products"
            class="flex flex-col border-t border-[#F2F2F2] pt-10 items-center justify-center w-full md:my-10 mb-12">
            <h1 class="font-medium text-4xl w-full">Ar mai putea să-ți placă</h1>

            <div id="products"
                class="grid sm:grid-cols-[repeat(auto-fit,250px)] grid-cols-[repeat(2,minmax(150px,1fr)] gap-1 sm:gap-3 mt-5 w-full justify-center">
                <% products.forEach(item => { %>
                    <product-card title="<%= item.title %>" rating="<%= item.rating %>"
                        currentPrice="<%= item.currentPrice %>" oldPrice="<%= item.oldPrice %>"
                        link="/product/<%= item.id_product %>" image="/media/images/<%= item.image.split(';')[0] %>">
                    </product-card>
                <% }); %>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="w-full overflow-hidden">
        <!-- Logo -->
        <div
            class="main-footer w-full bg-accent flex flex-col xl:flex-row items-center justify-center xl:justify-evenly p-16 lg:px-40">
            <img src="/media/logo-yellow-black.svg" class="h-20 mb-16 lg:mb-0 lg:mr-16 xl:self-start">

            <!-- Links Columns -->
            <div class="flex flex-col md:flex-row w-full lg:w-auto justify-between items-center md:items-start">
                <!-- Meniu principal -->
